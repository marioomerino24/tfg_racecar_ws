<launch>
  <arg name="world" default="$(find gazebo_ros)/worlds/empty.world"/>
  <param name="use_sim_time" value="true"/>

  <!-- Gazebo vacío -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world)"/>
    <arg name="paused" value="false"/>
    <arg name="gui" value="true"/>
  </include>

  <!-- robot_description para spawnear -->
  <param name="robot_description"
         command="$(find xacro)/xacro --inorder '$(find racecar_description)/urdf/racecar.xacro'"/>

  <!-- Spawn en (0,0,0.05) -->
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_racecar" output="screen"
        args="-urdf -model racecar -param robot_description -x 0.0 -y 0.0 -z 0.05"/>

  <!-- ros_control + bridge; aquí ya suele lanzarse robot_state_publisher -->
  <include file="$(find racecar_sim_control)/launch/racecar_control.launch"/>

<!-- Teleop teclado: remapea al topic que escucha el bridge -->
<node pkg="racecar_sim_control" type="keyboard_teleop.py" name="keyboard_teleop" output="screen">
  <remap from="/vesc/ackermann_cmd_mux/input/teleop" to="/ackermann_cmd"/>
</node>


</launch>
