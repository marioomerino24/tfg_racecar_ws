<launch>
  <arg name="model" default="$(find racecar_description)/urdf/racecar.xacro"/>
  <arg name="use_gui" default="true"/>
  <arg name="open_rviz" default="true"/>
  <arg name="rviz_config" default="$(find racecar_description)/rviz/racecar.rviz"/>

  <!-- Alias de compatibilidad: launch recomendado en tools/. -->
  <include file="$(find racecar_description)/launch/tools/view_robot_model.launch">
    <arg name="model" value="$(arg model)"/>
    <arg name="use_gui" value="$(arg use_gui)"/>
    <arg name="open_rviz" value="$(arg open_rviz)"/>
    <arg name="rviz_config" value="$(arg rviz_config)"/>
  </include>
</launch>
